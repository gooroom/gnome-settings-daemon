+static void
+wait_for_running_screensaver (GsdPowerManager *manager)
+{
+        gint idx = 0;
+        GVariant *res;
+        GError *error = NULL;
+        guint active_time = 0;
+        
+        while (idx < 30) {
+                error = NULL;
+                res = g_dbus_proxy_call_sync (G_DBUS_PROXY (manager->priv->screensaver_proxy),
+                                                      "GetActiveTime", NULL,
+                                                      G_DBUS_CALL_FLAGS_NONE,
+                                                      -1, NULL, &error);
+
+                if (error) {
+                        g_warning ("Could not ask screensaver to activate time: %s", error->message);
+                        g_error_free (error);
+                        break;
+                }
+
+                g_variant_get (res, "(u)", &active_time);
+                g_variant_unref (res);
+                
+                if (active_time > 0)
+                        break;
+
+                g_usleep (100 * 1000);
+                idx++;
+        }
+}
